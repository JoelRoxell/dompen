{
  "env": {
    "es6": true,
    "mocha": true
  },
  "extends" : [
    "standard",
    "google"
  ],
  "rules": {
    "semi": [2, "always"],
    "max-len": [2, 80, 2],
    "strict": "error",
    "quotes": [2, "single", {
      "allowTemplateLiterals": true
    }],
    "object-curly-spacing": ["error", "always", {
      "objectsInObjects": false,
      "arraysInObjects": false
    }]
  },
  "parserOptions": {
    "sourceType": "script",
    "ecmaVersion": 2017
  }
}
